autoload -U colors && colors
autoload -Uz compinit && compinit
autoload -Uz vcs_info
setopt prompt_subst

# VARIABLES
NEWLINE=$'\n'

# FUNCTIONS
precmd() {
    local gstat="$(git status 2> /dev/null)"
    if [[ $gstat =~ "working (directory|tree) clean" ]]; then
        zstyle ':vcs_info:*' formats "(%F{green}%b%f)"
    else
        zstyle ':vcs_info:*' formats "(%F{red}%b%f)"
    fi

    vcs_info
}

# THE PROMPT
PS1='${NEWLINE}%~ ${vcs_info_msg_0_}${NEWLINE}$ '
# PATH
export PATH="/usr/local/sbin:$PATH"

